{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "types": ["vitest"]  // Ensure 'vitest' types are included
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts", "src/**/*.spec.ts"],
  "exclude": ["node_modules"]
}
